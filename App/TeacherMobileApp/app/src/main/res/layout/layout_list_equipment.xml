<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="match_parent"
              android:gravity="top"
              android:padding="16dp"
        >
    <LinearLayout
            android:layout_width="@dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/equipmentImg"
                android:layout_width="@dimen/thumbnail_width"
                android:layout_height="@dimen/thumbnail_height"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/highlight_image"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Máy Lạnh:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtEquipmentName"
                android:textColor="@color/black"
                android:textStyle="bold" />

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal" android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian còn lại:"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView2"
                    android:textStyle="bold" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2890"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtTimeRemain"
                    android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal" android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhãn hiệu: "
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView3"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="HITACHI"
                    android:textColor="@color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtName"
                    android:textStyle="bold" />
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thiết bị đã được báo cáo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtStatus"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã chọn thiết bị này"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txtReported"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone"/>




    </LinearLayout>

</LinearLayout>